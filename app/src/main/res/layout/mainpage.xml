<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="COM'IT"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_marginTop="40dp"
        >

    </TextView>

    </LinearLayout>
    
    <Button
        android:id="@+id/btn_notice"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="100dp"
        android:scaleType="fitXY"
        android:background="@drawable/ic_android_black_24dp"
        app:layout_constraintEnd_toStartOf="@id/btn_guide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="공지사항"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/btn_notice"
        app:layout_constraintStart_toStartOf="@id/btn_notice"
        app:layout_constraintTop_toBottomOf="@id/btn_notice" />

    <Button
        android:id="@+id/btn_guide"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:onClick="@{()->vm.goBoard()}"
        android:scaleType="fitXY"
        android:background="@drawable/ic_android_black_24dp"
        app:layout_constraintBottom_toBottomOf="@id/btn_notice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_notice"
        app:layout_constraintTop_toTopOf="@id/btn_notice" />

    <TextView
        android:id="@+id/tv_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="길라잡이"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/btn_guide"
        app:layout_constraintStart_toStartOf="@id/btn_guide"
        app:layout_constraintTop_toBottomOf="@id/btn_guide" />

    <Button
        android:id="@+id/btn_community"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="48dp"
        android:scaleType="fitXY"
        android:background="@drawable/ic_android_black_24dp"
        app:layout_constraintEnd_toStartOf="@id/btn_guide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_notice" />

    <TextView
        android:id="@+id/tv_community"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="커뮤니티"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/btn_community"
        app:layout_constraintStart_toStartOf="@id/btn_community"
        app:layout_constraintTop_toBottomOf="@id/btn_community" />

    <Button
        android:id="@+id/btn_lecture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:background="@drawable/ic_android_black_24dp"
        app:layout_constraintTop_toTopOf="@id/btn_community"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_notice" />

    <TextView
        android:id="@+id/tv_lecture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="강의평가"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/btn_lecture"
        app:layout_constraintStart_toStartOf="@id/btn_lecture"
        app:layout_constraintTop_toBottomOf="@id/btn_lecture" />

    <Button
        android:id="@+id/btn_settings"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="48dp"
        android:scaleType="fitXY"
        android:background="@drawable/ic_android_black_24dp"
        app:layout_constraintEnd_toStartOf="@id/btn_guide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_community" />

    <TextView
        android:id="@+id/tv_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="설정"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/btn_community"
        app:layout_constraintStart_toStartOf="@id/btn_community"
        app:layout_constraintTop_toBottomOf="@id/btn_settings" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id = "@+id/fab"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="40dp"
        android:src = "@drawable/ic_android_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clickable="true"
        android:backgroundTint="#BCCDD5"
        >

    </com.google.android.material.floatingactionbutton.FloatingActionButton>

</androidx.constraintlayout.widget.ConstraintLayout>
